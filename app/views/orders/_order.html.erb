
<% @order_items.each do |product| %>
    <tr>
    <td><%= image_tag product.image.tiny %></td>
    <td><h4><%= product.name %></h4><br>
    <p><%= product.description %></p></td>
    <td><%= product.price %></td>
    <td><%= product.quantity %></td>
    <td><%= product.quantity * product.price %></td>
    </tr>
<% end %>




 

  





